{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ovelo",
  "version": "0.1.18",
  "identifier": "com.ovelo.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ovelo",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": [
      "nsis",
      "dmg"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/backend"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMzQzkyMUJBOERDRkE2MzgKUldRNHBzK051aUhKdytjczNtaGZjMWpwcWZrdnJkcWZ3Wjgrdy9jOVJTZzZrUnNMV0dBOFNqRXAK",
      "endpoints": [
        "https://github.com/senneb2002/Ovelo/releases/latest/download/latest.json"
      ]
    }
  }
}